    "version": "0.2.0",
    "configurations": [
        {
            "name": "RootTheBox",
            "type": "python",
            "request": "launch",
            "program": "rootthebox.py",
            "args": 
            [ 
                "--start",
                "--debug",
                "--autostart_game=True",
                "--autoreload_source=False"
            ],
            "console": "integratedTerminal",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Starting RTB on http://localhost:([0-9]+)",
                "uriFormat": "http://localhost:%s"
            }
        },
        {
            "name": "RootTheBox as container",
            "type": "python",
            "request": "launch",
            "program": "rootthebox.py",
            "args": 
            [ 
                "--setup=docker", 
                "--debug", 
                "--sql_dialect=mysql",
                "--autostart_game=True",
                "--autoreload_source=False"
            ],
            "console": "integratedTerminal"
        }
    ]
}